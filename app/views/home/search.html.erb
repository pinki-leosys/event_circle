
<%= render partial: "layouts/header"%>
		
<div class="clearfix"></div>
	<div class="banner-back">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
							<div class="about-box">
						<div class="about-box-head">
							<span class="title-2">Upcoming <span class="highlight-1">Events</span></span>
						</div>
						<div class="about-box-content">
						<div class="about-box-content">
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Venue</th>
    <th>Event start date</th>
    <th>Event end date</th>
    <th>View Event</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= raw(event.description) %></td>
    <td><%= "#{event.address.city} #{event.address.state}" if event.address %></td>
    <td><%= event.event_start_date.strftime("%b %d,%Y") %></td>
    <td><%= event.event_end_date.strftime("%b %d,%Y") %></td>
    <td><%= link_to "Show", read_more_path(event) %></td>

  </tr>
<% end %>
</table>

						</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div> 
	
	<%= render partial: "layouts/content"%>

	
	<%= render partial: "layouts/footer"%>

	<script>
   $(document).ready(function(){
   $('p img').parent().hide();
   $('p object').parent().hide();

   });

</script>
 <style>
      td p img {
        display:none;
      }
      td p object{
        display:none;
      }



p { display : inline; }
</style>
